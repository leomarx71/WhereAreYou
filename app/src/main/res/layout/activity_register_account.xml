<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_way_logo"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:scaleType="centerInside" />

    <TextView
        android:text="Register New Account"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_account_top_label"
        android:textSize="12sp" />

    <!-- Account Name Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_name_input_layout">
    <EditText
        android:id="@+id/register_account_text_name"
        android:hint="Name"
        android:maxLength="25"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10" />
    </android.support.design.widget.TextInputLayout>


    <!-- Account Email Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_email_input_layout">
            <EditText
                android:id="@+id/register_account_text_email"
                android:hint="Email"
                android:maxLength="50"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10" />
    </android.support.design.widget.TextInputLayout>

    <!-- Account Password Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_password_input_layout">
            <EditText
                android:id="@+id/register_account_text_password"
                android:hint="Password"
                android:maxLength="10"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10" />
    </android.support.design.widget.TextInputLayout>

    <!-- Account Password Confirmation Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_confirm_password_input_layout">
    <EditText
        android:id="@+id/register_account_text_confirm_password"
        android:hint="Confirm Password"
        android:maxLength="10"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/register_account_register_button"
        android:text="Register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#29a329" />

    <Button
        android:id="@+id/register_account_cancel_button"
        android:text="Cancel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff4d4d" />


</LinearLayout>